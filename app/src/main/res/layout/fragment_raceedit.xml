<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.race.RaceFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <EditText
            android:layout_width="wrap_content"
            android:id="@+id/name"
            android:layout_height="wrap_content"/>
        <EditText
        android:layout_width="wrap_content"
        android:id="@+id/description"
        android:layout_height="wrap_content"/>
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сила:"/>
            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/strength"
                android:text="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ловкость:"/>
            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/agility"
                android:text="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Харизма:"/>
            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/charisma"
                android:text="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Интеллект:"/>
            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/intelligence"
                android:text="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Восприятие:"/>
            <EditText
                android:layout_width="wrap_content"
                android:text="1"
                android:id="@+id/perception"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Здоровье:"/>
            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/health"
                android:text="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Уворот:"/>
            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/dodge"
                android:text="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Стойкость:"/>
            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/durability"
                android:text="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Точность:"/>
            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/accuracy"
                android:text="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Урон:"/>
            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/damage"
                android:text="1"
                android:layout_height="wrap_content"/>
        </GridLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:id="@+id/save"
        android:layout_gravity="center|bottom"
        />

</FrameLayout>