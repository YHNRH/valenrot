<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center | left "
            >

        <ImageView
            android:id="@+id/myImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/roll_green"
            app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/roll_tw"
                    android:text="?"
                    android:fontFamily=""
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/dice_font_color"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center | right"
            >

                <ImageView
                    android:id="@+id/myImageView1"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/roll_red"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/roll_tw1"
                    android:text="?"
                    android:fontFamily=""
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/dice_font_color"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    />
        </FrameLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Раса: "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/race"/>
        </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Характер: "/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/temper"/>
                </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="roll"
            android:id="@+id/roll_btn"
            android:layout_marginBottom="110px"
            android:layout_gravity="bottom | center"
            />



</FrameLayout>